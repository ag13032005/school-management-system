<%- include('../partials/header1') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Manage Students</h2>
      <p class="lead">View and manage student records</p>
      <a href="/teacher/students/add" class="btn btn-primary mb-3">
        <i class="fas fa-plus-circle"></i> Add New Student
      </a>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header bg-secondary text-white">
          <h4>All Students</h4>
        </div>
        <div class="card-body">
          <% if (students.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Student ID</th>
                    <th>Class</th>
                    <th>Roll No</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(student => { %>
                    <tr>
                      <td><%= student.name %></td>
                      <td><%= student.studentId %></td>
                      <td><%= student.standard.name %></td>
                      <td><%= student.rollNo %></td>
                      <td>
                        <a href="/teacher/students/edit/<%= student._id %>" class="btn btn-primary btn-sm">
                          <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/teacher/students/delete/<%= student._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?')">
                          <i class="fas fa-trash"></i> Delete
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info">No students found. Add your first student using the Add New Student button.</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
