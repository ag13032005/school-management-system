<%- include('../partials/header') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/standards">Classes</a></li>
          <li class="breadcrumb-item"><a href="/standards/details/<%= standard._id %>"><%= standard.name %> Details</a></li>
          <li class="breadcrumb-item active" aria-current="page">Grading System</li>
        </ol>
      </nav>
      <h2>Grading System: <%= standard.name %></h2>
      <p class="lead">Define grade thresholds for student performance evaluation</p>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4>Add New Grade</h4>
        </div>
        <div class="card-body">
          <form action="/grades/add" method="POST">
            <input type="hidden" name="standardId" value="<%= standard._id %>">
            <div class="form-group">
              <label for="gradeName">Grade Name</label>
              <input type="text" id="gradeName" name="gradeName" class="form-control" required>
              <small class="form-text text-muted">Example: A+, A, B+, etc.</small>
            </div>
            <div class="form-group">
              <label for="minMarks">Minimum Percentage</label>
              <input type="number" id="minMarks" name="minMarks" class="form-control" min="0" max="100" required>
            </div>
            <div class="form-group">
              <label for="maxMarks">Maximum Percentage</label>
              <input type="number" id="maxMarks" name="maxMarks" class="form-control" min="0" max="100" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Grade</button>
          </form>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-secondary text-white">
          <h4>Grade Thresholds</h4>
        </div>
        <div class="card-body">
          <% if (grades.length > 0) { %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Grade</th>
                  <th>Min %</th>
                  <th>Max %</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% grades.forEach(grade => { %>
                  <tr>
                    <td><%= grade.gradeName %></td>
                    <td><%= grade.minMarks %></td>
                    <td><%= grade.maxMarks %></td>
                    <td>
                      <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editModal<%= grade._id %>">
                        <i class="fas fa-edit"></i>
                      </button>
                      <a href="/grades/delete/<%= grade._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this grade?')">
                        <i class="fas fa-trash"></i>
                      </a>
                    </td>
                  </tr>
                  
                  <!-- Edit Modal -->
                  <div class="modal fade" id="editModal<%= grade._id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editModalLabel">Edit Grade</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <form action="/grades/edit/<%= grade._id %>" method="POST">
                            <input type="hidden" name="standardId" value="<%= standard._id %>">
                            <div class="form-group">
                              <label for="gradeName">Grade Name</label>
                              <input type="text" id="gradeName" name="gradeName" class="form-control" value="<%= grade.gradeName %>" required>
                            </div>
                            <div class="form-group">
                              <label for="minMarks">Minimum Percentage</label>
                              <input type="number" id="minMarks" name="minMarks" class="form-control" min="0" max="100" value="<%= grade.minMarks %>" required>
                            </div>
                            <div class="form-group">
                              <label for="maxMarks">Maximum Percentage</label>
                              <input type="number" id="maxMarks" name="maxMarks" class="form-control" min="0" max="100" value="<%= grade.maxMarks %>" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <div class="alert alert-info">No grades defined yet. Add your first grade using the form.</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>