<%- include('../partials/header') %>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h4><i class="fas fa-user-graduate mr-2"></i>Student Login</h4>
        </div>
        <div class="card-body">
          <form action="/student/login" method="POST">
            <div class="form-group">
              <label for="studentId">Student ID</label>
              <input type="text" id="studentId" name="studentId" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="captcha">CAPTCHA Verification</label>
              <div class="captcha-container p-3 mb-2 bg-light text-center">
                <h3 class="captcha-text"><%= captcha %></h3>
              </div>
              <input type="text" id="captcha" name="captcha" class="form-control" placeholder="Enter CAPTCHA text" required>
            </div>
            <button type="submit" class="btn btn-success btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>